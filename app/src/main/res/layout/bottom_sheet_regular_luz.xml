<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="32dp">

    <TextView
        android:id="@+id/texttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Regula la intensidad de la luz"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:fontFamily="@font/rubik_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.akaita.android.circularseekbar.CircularSeekBar
        android:id="@+id/seekbar2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:enabled="true"
        app:innerCircleColor="#e0f7e9"
        app:layout_constraintEnd_toEndOf="@+id/texttitle"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/texttitle"
        app:layout_constraintTop_toBottomOf="@+id/texttitle"
        app:max="100"
        app:min="0"
        app:progress="0"
        app:progressTextColor="@color/black"
        app:progressTextSize="26"
        app:ringColor="@color/black"
        app:ringWidth="0.5"
        app:showIndicator="true"
        app:showInnerCircle="true"
        app:showProgressText="true"
        app:speedMultiplier="2" />

    <Button
        android:id="@+id/btnaceptar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_scan"
        android:text="Aceptar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/seekbar2"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/seekbar2"
        app:layout_constraintTop_toBottomOf="@+id/seekbar2" />

</androidx.constraintlayout.widget.ConstraintLayout>