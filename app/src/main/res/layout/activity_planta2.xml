<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg4"
    android:layout_height="match_parent"
    tools:context="com.example.infinitycrop.ui.MachineControl.planta2">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7.3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/backDashboard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/icons_arrow_left_green">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="469dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="clip_horizontal"
                    android:text="Piso 2"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <me.sujanpoudel.wheelview.WheelView
                android:id="@+id/wheelview"
                android:layout_width="290dp"
                android:layout_height="203dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:wheelAnchorAngle="270"
                app:wheelAnimationDuration="500"
                app:wheelArcBackgroundColor="@color/colorSecondaryDark"
                app:wheelCenterIcon="@drawable/logo_without_background"
                app:wheelDividerStrokeWidth="1dp"
                app:wheelMode="ANIMATE_TO_ANCHOR"
                app:wheelSelectedArcBackgroundColor="@color/colorSecondary"
                app:wheelSelectedTextColor="@color/white"
                app:wheelStartAngle="315"
                app:wheelTextColor="@color/white"
                app:wheelTextSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rectangle"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textViewinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Pulsa el botón para editar:"
                                android:textColor="#000000"
                                android:textSize="16.7sp"
                                android:textStyle="normal" />

                            <Button
                                android:id="@+id/btnedit2"
                                android:layout_width="match_parent"
                                android:layout_marginTop="2dp"
                                android:layout_height="30dp"
                                android:background="@drawable/btn_scan"
                                android:layout_marginLeft="10dp"
                                android:text="Editar"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Estado de la estación:"
                            android:textColor="#9E9D9D" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/colorEstado"
                                android:layout_width="30dp"
                                android:layout_height="18dp"
                                app:srcCompat="@drawable/circulo_pequenyo" />

                            <TextView
                                android:id="@+id/textoEstado"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text="Libre"
                                android:textColor="@color/black" />

                        </LinearLayout>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="#9e9e9e" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Nombre de la especie:"
                            android:textColor="#9E9D9D" />

                        <EditText
                            android:id="@+id/editTextNobrep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingTop="5dp"
                            android:textColorHint="#9E9D9D"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="15sp"
                            android:hint="Toca para añadir"
                            android:maxLines="1"
                            android:maxLength="40"

                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="#9e9e9e" />

                        <TextView
                            android:id="@+id/textedit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22.3dp"
                            android:text="Programar una alarma"
                            android:textColor="#9E9D9D" />

                        <TextView
                            android:id="@+id/editHour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:text="Toca para añadir"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:textColorHint="#333232"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:background="#9e9e9e" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22.3dp"
                            android:text="Ubicación de la planta"
                            android:textColor="#9E9D9D" />
                        <TextView
                            android:id="@+id/txtStation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:text="Esta planta se encuentra en la estación número: "
                            android:editable="false"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:textColorHint="#333232"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="20dp"
                            android:background="#9e9e9e" />

                        <Button

                            android:id="@+id/btn_save"
                            android:layout_width="151dp"
                            android:layout_height="49dp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_scan"
                            android:onClick="saveNote"
                            android:text="Guardar cambios"
                            android:textColor="#FFFFFF"
                            android:visibility="gone">

                        </Button>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp">

                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_registMachine"
                android:layout_width="90dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:layout_marginTop="40.3dp"
                android:layout_marginBottom="16.7dp"
                android:background="@drawable/btn_login"
                android:foregroundGravity="right"
                android:gravity="center"
                android:orientation="vertical"

                android:visibility="gone">


            </LinearLayout>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraitR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/imageprevius"
                android:layout_width="400dp"
                android:layout_height="731dp"
                android:alpha="0.4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/black"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/txtInfoD"
                android:layout_width="264dp"
                android:layout_height="81dp"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:text="Toca una casilla para visualizar los datos"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageprevius"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>


</ScrollView>




